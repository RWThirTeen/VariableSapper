<UserControl x:Class="VariableSapper.Views.FieldView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:VariableSapper.Views"
             mc:Ignorable="d" 
             Height="{Binding UserControlHeight}" Width="{Binding UserControlWidth}">
    <Grid>
        <Grid.ColumnDefinitions>
            
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.Resources>
            <Style TargetType="TextBlock" BasedOn="{StaticResource MaterialDesignBody1TextBlock}">
                <Setter Property="Margin" Value="10,5"/>
            </Style>
            <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignOutlinedButton}">
                <Setter Property="Margin" Value="10,0"/>
                <Setter Property="Padding" Value="4"/>
            </Style>
        </Grid.Resources>

        <DockPanel>
            <StackPanel DockPanel.Dock="Left"
                        Orientation="Horizontal"
                        VerticalAlignment="Center">
                <md:PackIcon Kind="Timer" 
                             Width="25" Height="25"
                             VerticalAlignment="Center"
                             Margin="5"/>
                <TextBlock Text="{Binding Timer}"
                           Width="60"/>
                <md:PackIcon Kind="Mine" 
                             Width="25" Height="25"
                             VerticalAlignment="Center"
                             Margin="5"/>   
                <TextBlock Text="{Binding MineCount}"
                           Width="60"/>
            </StackPanel>
            <StackPanel DockPanel.Dock="Right"
                        HorizontalAlignment="Right"
                        Orientation="Horizontal">
                <Button Command="{Binding RestartGameCommand}">
                    <md:PackIcon Kind="Restart"
                                 Width="25" Height="25"/>
                </Button>
                <Button Command="{Binding BackToMenuCommand}">
                    <md:PackIcon Kind="MenuOpen"
                                 Width="25" Height="25"/>
                </Button>
                <Button Command="{Binding ApplicationExitCommand}">
                    <md:PackIcon Kind="CloseCircleOutline"
                                 Width="25" Height="25"/>
                </Button>
            </StackPanel>
        </DockPanel>

        <ItemsControl ItemsSource="{Binding MineField.Rows}"
                      Grid.Row="1"
                      HorizontalAlignment="Center"
                      HorizontalContentAlignment="Center">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Rows="{Binding MineField.NumberOfRows}"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <ItemsControl ItemsSource="{Binding Cells}"
                                  Margin="0,5">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Columns="{Binding Cells.Count}"
                                             Height="25" 
                                             VerticalAlignment="Center"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button Width="30" Height="30"
                                        Padding="0" Margin="0" 
                                        MouseRightButtonUp="Button_MouseRightButtonUp"
                                        MouseLeftButtonUp="Button_MouseLeftButtonUp"
                                        VerticalAlignment="Center" HorizontalAlignment="Center"
                                        VerticalContentAlignment="Center" HorizontalContentAlignment="Center"
                                        BorderThickness="0">
                                    <md:PackIcon Kind="{Binding IconName}"
                                                 Margin="-5" 
                                                 Height="25" Width="25"/>
                                </Button>
                                
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
            
    </Grid>
</UserControl>
